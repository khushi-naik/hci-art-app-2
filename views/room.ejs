    <script src="js/pan-zoom.js" defer></script>
    <script src="js/lib/jquery-3.6.0.min.js" defer></script>
    <script src="js/lib/jquery-ui.min.js" defer></script>
    <script src="js/lib/plain-draggable.min.js" defer></script>
